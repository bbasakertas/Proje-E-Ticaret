@model List<ProjeETicaret.Models.i.FavoritiesModels>
@{
    /**/

    ViewBag.Title = "Favorilerim";
}

<div class="row">
    <div class="col-md-15">
        <h3>FAVORİLER</h3>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <form>
            <div class="row">

                @foreach (var item in Model)
                {
                    <div class="col-md-5 col-sm-6 col-xs-30">

                        <center><img src="~/@item.Product.ProductImageName" class="img img-responsive" style="max-height:126px;"></center>
                        <div class="caption">
                            <h5 class="ProductNameStyle">@item.Product.Name</h5>
                            <p>
                                <a href="~/i/AddBasket/@item.Product.Id" class="btn btn-success btn-sm">
                                    <span class="fa fa-shopping-cart"></span>&nbsp;Sepete Ekle
                                </a>
                                <button onclick="GetProductInfo(@item.Product.Id)" class="btn btn-info btn-sm">
                                    <span class="fa fa-info"></span>&nbsp;Bilgi
                                </button>
                                <a href="~/i/RemoveFavori/@item.Product.Id" class="btn btn-danger btn-sm">
                                    <span class="fa fa-trash"></span>&nbsp;Sil
                                </a>
                                <a href="~/i/AddCompare/@item.Product.Id" class="btn btn-dark btn-sm" style="width:100px;">
                                    <span class="fa fa-compress"></span>&nbsp;Karşılaştır
                                </a>
                            </p>
                        </div>

                    </div>
                }
            </div>
        </form>
           


    </div>
</div>
